<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.dal.cs.web.cs_prepguide.helpFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/pageHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Help Section"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25sp"/>


        <TextView
            android:id="@+id/appIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/pageHeader"
            android:text="  We aim to create a platform that provides information about the different disciplines in Computer Science and the jobs or positions available within each discipline in a particular company in which they want to get placed.\n\nThis valuable information in the form of guide provided in our app will help users to make and plan their career path.\n\nThis will be useful to fresh Computer Science graduates as well as professionals considering a career change to join the booming IT industries." />

        <TextView
            android:id="@+id/permissionsApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appIntro"
            android:layout_marginTop="10dp"
            android:text="@string/permissions_required_for_the_app"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/perm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/permissionsApp"
            android:text="1.Camera \n2. Location\nMake sure both permissions are granted"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/loginTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/perm1"
            android:layout_marginTop="10dp"
            android:text="@string/login_help" />

        <TextView
            android:id="@+id/log1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginTxt"
            android:text="1. New Password can be set using Forget Password Button.\n2. Login can be done with Google/Facebook" />


        <TextView
            android:id="@+id/cameraIssue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/log1"
            android:layout_marginTop="10dp"
            android:text="@string/camera_issue" />

        <TextView
            android:id="@+id/cam1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cameraIssue"
            android:text="If the application crashes on clicking upload, check whether\nCamera permissions are granted or not" />


        <TextView
            android:id="@+id/fingerPrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cam1"
            android:layout_marginTop="10dp"
            android:text="Finger Print Issue" />

        <TextView
            android:id="@+id/f1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fingerPrint"
            android:text="If the application crashes on clicking upload, check whether\n1. Device Supports Fingerprint Hardware\n2. One or more fingerprints should be registered\n3. Only users registered via email can access the app" />



        <TextView
            android:id="@+id/filter_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/f1"
            android:layout_marginTop="10dp"
            android:text="Apply Filter Help" />

        <TextView
            android:id="@+id/f11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/filter_options"
            android:text="We apply filter based on:\n1. By Location\n2. By Skills\n3. It is recommended to add your skills set to use ou app better" />




    </RelativeLayout>
    </ScrollView>

</FrameLayout>
