<?xml version="1.0" encoding="utf-8"?>

<!--//REFERENCE For Spinner layout:
https://stackoverflow.com/questions/17231683/how-to-create-custom-spinner-like-border-around-the-spinner-with-down-triangle-o
-->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <corners android:radius="3dp" />

                <stroke
                    android:width="1dp"
                    android:color="#000"/>

            </shape>

        </item>



        <item android:drawable="@drawable/ic_arrow_drop_down_black_24dp"
            android:gravity="right">

        </item>

    </layer-list>
    </item>
</selector>